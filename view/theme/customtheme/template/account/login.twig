{{ header }}
<div id="account-login" class="account-container">
  
  
  
    
    <div id="content" class="account-content two-up">
   
        <div class="two-up-content">
          
            <h2>{{ text_new_customer }}</h2>
            <p><strong>{{ text_register }}</strong></p>
            <p>{{ text_register_account }}</p>
            <a href="{{ register }}" class="button-styling anchor center">{{ button_continue }}</a>
          </div>
        
        <div class="two-up-content">
        
            <h2>{{ text_returning_customer }}</h2>
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
              <div class="form-group-custom full">
                <label class="input-label" for="input-email">{{ entry_email }}</label>
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="input-styling" />
              </div>
              <div class="form-group-custom full">
                <label class="input-label" for="input-password">{{ entry_password }}</label>
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="input-styling" />
                <div class="account-link">  <a href="{{ forgotten }}">{{ text_forgotten }}</a></div>
              </div>
              <input type="submit" value="{{ button_login }}" class="button-styling center" />
              {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>
         
        </div>

      {{ content_bottom }}</div>
        <div class="alert-container">
           {% if success %}
          <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
          {% endif %}
          {% if error_warning %}
          <div class="alert alert-danger-custom alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
        {% endif %}
        </div>  
  
</div>
{{ footer }}