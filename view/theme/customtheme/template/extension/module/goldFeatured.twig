





  <div class="showcase-module-subpages scroll-animate sub-showcase-animation">
        <div class="picture-container">
          {% for product in products %}
         
            <div class="image {% if loop.first %} active {% endif %}" style="background-image: url({{ product.thumb }})" alt="{{ product.name }}"> </div>
        
          {% endfor %}
        </div>
        <div class="right-content-container">
            <div class="module-title">
                <h3>All Gold Bullion Bars are VAT free<br/> 
                    with free secured delivery on all our bars sold.</h3>    
            </div>
            <div class="name-container">
                <div class="product-name">
                  {% for product in products %}
                    <div class="product {% if loop.first %} active {% endif %}">
                        <h2>{{ product.name }}</h2>
                        <div class="price">
                            <span>{{ product.tax }}</span>
                        </div>
                         <div class="button-group">
        <button type="button" onclick="cart.add('{{ product.product_id }}');"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button>
       {#  <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
        <button type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button> #}
      </div>
                    </div>
                  {% endfor %}

                </div>
                
            </div>     
            <div class="info-container">
              {% for product in products %}
               <div class="info {% if loop.first %} active {% endif %}">
                    <p>
                       {{ product.description }}
                    </p>
                </div> 
              {% endfor %}
               
            </div>
        </div>
        <div class="next-section right-side">
            <div class="arrow">
                <svg version="1.1" class="svg-arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                     viewBox="0 0 50 25" style="enable-background:new 0 0 50 25;" xml:space="preserve">
                <path class="st0 point" d="M28.8,20.5c0-5.3,0-10.7,0-16c5.8,2.7,11.5,5.3,17.3,8C40.3,15.2,34.6,17.8,28.8,20.5z"/>
                <line class="st0 stem"  x1="33.8" y1="12.5" x2="4.8" y2="12.5"/>
                </svg>
            </div>
            <h4>MORE DETAILS</h4>
        </div> 
  </div>
